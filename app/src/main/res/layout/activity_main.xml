<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.refactored.satvocabrefactored.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp"
        android:text="Thank you for downloading SATVocab! This app contains over 1000 SAT vocabulary words to help you improve!."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Playing!"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/startAppButton"/>

</LinearLayout>